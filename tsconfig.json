{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["vite/client"],
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "noEmit": true,
    "isolatedModules": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "verbatimModuleSyntax": true,
    "baseUrl": "./",
    "paths": {
      "#lib/*": ["lib/*"],
      "#main/*": ["main/*"],
      "#renderer/*": ["renderer/*"],
      "#config/*": ["config/*"]
    }
  }
}
